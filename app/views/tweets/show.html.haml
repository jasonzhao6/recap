#gallery
  #slider.well.vertical-align-container
    %ul.vertical-align
      - @tweets.each do |tweet|
        - if tweet.id.to_s == params[:id]
          %li.active= render partial: 'tweet_and_hash_tag', locals: {tweet: tweet}
        - else
          %li= render partial: 'tweet_and_hash_tag', locals: {tweet: tweet}
  %nav
    %ul#sequence
      - @tweets.each do |tweet|
        - if tweet.id.to_s == params[:id]
          %li.active &bull;
        - else
          %li &bull;
