- if !@ajax
  %form.well.form-search
    %input#search.search-query{type: 'text', placeholder: 'Search...', value: params[:q]}
    %a#clear-search.close.close-large{style: "display: #{params[:q] ? 'inline-block' : 'none'}"} &times;
#matches
  - if @tweets
    - @tweets.each do |tweet|
      %article.well{ontouchstart: "touchStart(event,'edit-#{tweet.id}');", ontouchend: "touchEnd(event);", ontouchmove: "touchMove(event);", ontouchcancel: "touchCancel(event);"}
        = "#{tweet}"
        %a{href: root_path(q: "##{tweet.hash_tag}"), 'data-pjax' => '#content'}= "##{tweet.hash_tag}"
        - if tweet.related_count > 1
          \-
          %a{href: '#'}= "#{tweet.related_count} related"
        .swiped-container{id: "edit-#{tweet.id}"}
          .options
            %a.btn{href: tweet_reply_path(tweet), 'data-pjax' => '#content'} Reply
            %a.btn{href: edit_tweet_path(tweet), 'data-pjax' => '#content'} Edit