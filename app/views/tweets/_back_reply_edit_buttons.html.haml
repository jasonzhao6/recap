.clearfix
  .pull-left
    - if params[:action] == 'show' # display delete button on :show but not on :index
      %button.btn{type: 'button', 'onclick' => 'history.back();'} Back
  .pull-right
    %a.reply-btn.btn{href: tweet_reply_path(tweet, origin: params[:action], q: params[:q], page: params[:page]), 'data-pjax' => 'true'} Reply
    %a.edit-btn.btn{href: edit_tweet_path(tweet, origin: params[:action], q: params[:q], page: params[:page]), 'data-pjax' => 'true'} Edit