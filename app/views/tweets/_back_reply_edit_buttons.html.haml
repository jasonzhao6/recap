.clearfix
  .pull-left
    - if params[:action] == 'show' # display back button on :show but not on :index
      %a.btn{href: tweets_path(q: params[:q], page: params[:page], highlight: params[:highlight]), 'data-pjax' => 'true'} Back
  .pull-right
    - # if a highlight id is passed in to partial, use that; otherwise, pass along url param
    %a.reply-btn.btn{href: tweet_reply_path(tweet, origin: params[:action], q: params[:q], page: params[:page], highlight: (highlight || params[:highlight])), 'data-pjax' => 'true'} Add related
    %a.edit-btn.btn{href: edit_tweet_path(tweet, origin: params[:action], q: params[:q], page: params[:page], highlight: (highlight || params[:highlight])), 'data-pjax' => 'true'} Edit